                @Html.ActionLink("Edit", "Edit", new { id = item.ClassID }, new { @class = "btn-sm btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ClassID }, new { @class = "btn-sm btn-danger" })
            </td>*@
    }

</div>

